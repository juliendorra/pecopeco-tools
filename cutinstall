if ! which adb > /dev/null ; then
  echo adb is required
  exit -1
fi
url=$1
tmpdir=$(mktemp -d)
trap "rm -rf $tmpir" EXIT
file=${url##*/}
tmpfile=$tmpdir/${url##*/}
curl -s $url --output $tmpfile
HEADSET_PATH=storage/self/primary/Android/data/am.benth.pecopeco/files/PecoPeco/cuts
if adb shell ls $HEADSET_PATH/$file ; then
  echo "$file already exists on headset, overwrite it ? [yN]"
  read answer
  if [[ "$answer" != "y" ]] ; then
    echo "Abort"
    exit -1
  fi
fi
adb push $tmpfile/$dir $REMOTE_PATH/
